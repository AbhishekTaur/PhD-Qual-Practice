.container.createquestion
  %h2 Edit Question
  %hr/
  .row
    .col-md-10
      = form_tag question_path(@question), :method=> :put do
        .form-group
          = label :question, :category, 'Question Category'
          = text_field :question, 'category'
        .form-group
          = label :question_bank, :question, 'Question'
          = text_area :question, 'question', :rows=>'5'
        .form-group
          = label :question_bank, :option1, 'Option1'
          = text_field :question, 'option1'
        .form-group
        = label :question_bank, :option2, 'Option2'
        = text_field :question, 'option2'
        .form-group
          = label :question_bank, :option3, 'Option3'
          = text_field :question, 'option3'
        .form-group
          = label :question_bank, :option4, 'Option4'
          = text_field :question, 'option4'
        .form-group 
          = label :question_bank, :option5, 'Option5'
          = text_field :question, 'option5'
        .form-group
          = label :question_bank, :answer, 'Correct Answer'
          = text_field :question, 'answer'
        .row
          .form-group.mx-auto
            = submit_tag 'Save Changes'
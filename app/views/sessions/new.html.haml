/%p#sessionflash= session[:flash]
.container
- if flash[:notice]
  .alert.alert-danger.alert-dismissible.fade.show{:role=>"alert"}
    = flash[:notice]
- if flash[:success]
  .alert.alert-success.alert-dismissible.fade.show{:role=>"alert"}
    = flash[:success]
    
- session[:flash] = nil
.container
  - provide(:title, "Log in")
  .row.login-form
    = form_for(:session, url: login_path) do |f|
      %h2.text-center Log in
      .text-center.social-btn
        = link_to  user_facebook_omniauth_authorize_path, :class => "btn btn-primary btn-block" do
          %i.fa.fa-facebook 
          Log in with
          %b Facebook
        = link_to  user_google_oauth2_omniauth_authorize_path, :class => "btn btn-danger btn-block" do
          %i.fa.fa-google 
          Log in with
          %b Google
      .or-seperator 
        %i or
      = f.label :email, class: session[:email]
      = f.email_field :email, class: 'form-control'
      = f.label :password
      = f.password_field :password, class: 'form-control --marginbottom16'  
      .text-center
        = f.submit "Log in", class: "btn btn-info text-center"
      = link_to "Forgot password?", new_password_reset_path, :class => ""
    %p
      %br  
      "Not a user?"
      =link_to 'Register', register_path, :class =>"text-center", :class => "text-info"